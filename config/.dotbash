# vi set: ft=bash

if [[ -z $TMUX ]]; then
  export PATH="$HOME/.dotfiles/bin:${PATH}"
  # custom functions
  export PATH="$HOME/.bash_functions:${PATH}"
fi

if command -v starship > /dev/null; then
  eval "$(starship init bash)"
fi

# rbenv unless it loaded.
if ! test -v RBENV_SHELL; then
  eval "$(rbenv init - --no-rehash)"
fi

# nodebrew unless it loaded.
if ! command -v nodebrew > /dev/null; then
  export PATH=$HOME/.nodebrew/current/bin:$PATH
fi

# eval "$(pyenv init -)"

# Set default editor to vim
export EDITOR=vim

# Don't check mail when opening terminal.
unset MAILCHECK

# Set this to false to turn off version control status checking within the prompt for all themes
# export SCM_CHECK=true

# alias
alias be='bundle exec'
alias c='clear'
alias deploy='bundle exec cap production deploy'
alias q='exit'
# alias gb='git branch'
# alias gc='git commit'
# alias gd='git diff HEAD'
alias gg='git grep -n'
alias gpull='git pull origin'
alias gpu='git pull upstream master'
alias gpush='git push origin'
alias gpp='gpu && gpush'
# alias gs='git status'
# alias run_pg='pg_ctl -D /usr/local/var/postgres start'
alias v='vim'
alias ls='ls -alh'

# brew git
if [[ -z $TMUX ]]; then
  export PATH="$(brew --prefix)/share/git-core/contrib/diff-highlight:${PATH}"
fi

# yarn
# export PATH="$HOME/.yarn/bin:${PATH}"

# rust
source "$HOME/.cargo/env"

# python
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# Completion
## git command
source "$(brew --prefix)/etc/bash_completion.d/git-completion.bash"

# tab autocompletion with cycle style
bind TAB:menu-complete

# z
[ -f $(brew --prefix)/etc/profile.d/z.sh ] && . $(brew --prefix)/etc/profile.d/z.sh
