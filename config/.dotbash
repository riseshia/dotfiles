# vi set: ft=bash

function append_path_unless_exist () {
  if ! [[ $# -eq 1 ]]; then
    echo "Usage: append_path_unless_exist 'some_path'"
    exit 2
  fi

  local new_path=$1
  if ! [[ $PATH =~ $new_path ]]; then
    export PATH="$new_path:${PATH}"
  fi
}

if [[ -z $TMUX ]]; then
  append_path_unless_exist "$HOME/.dotfiles/bin"
  # add custom commands' path
  append_path_unless_exist "$HOME/.bash_commands"
fi

# Load starship it exists & unless loaded.
if command -v starship > /dev/null && ! [ -v STARSHIP_START_TIME ]; then
  eval "$(starship init bash)"
fi

# Load rbenv unless it loaded.
if ! declare -f rbenv > /dev/null; then
  eval "$(rbenv init - --no-rehash)"
fi

# Load nodebrew unless it loaded.
append_path_unless_exist "$HOME/.nodebrew/current/bin"

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# Set default editor to vim
export EDITOR=vim

# Don't check mail when opening terminal.
unset MAILCHECK

# Set this to false to turn off version control status checking within the prompt for all themes
# export SCM_CHECK=true

# alias
alias be='bundle exec'
alias c='clear'
alias deploy='bundle exec cap production deploy'
alias q='exit'
# alias gb='git branch'
# alias gc='git commit'
# alias gd='git diff HEAD'
alias gg='git grep -n'
alias gpull='git pull origin'
alias gpu='git pull upstream master'
alias gpush='git push origin'
alias gpp='gpu && gpush'
# alias gs='git status'
# alias run_pg='pg_ctl -D /usr/local/var/postgres start'
alias v='vim'
alias ls='ls -alh'

# brew git
append_path_unless_exist "$(brew --prefix)/share/git-core/contrib/diff-highlight"

# yarn
# export PATH="$HOME/.yarn/bin:${PATH}"

# rust
source "$HOME/.cargo/env"

# Completion
## git command
source "$(brew --prefix)/etc/bash_completion.d/git-completion.bash"

# tab autocompletion with cycle style
bind TAB:menu-complete

# fzf
if command -v fzf > /dev/null; then
  export FZF_DEFAULT_COMMAND='git ls-files'
fi

# z
[ -f $(brew --prefix)/etc/profile.d/z.sh ] && . $(brew --prefix)/etc/profile.d/z.sh

# Load misc profiles
for profile in ~/.dotfiles/config/.dotbash_profile.d/*.sh ; do
  source "$profile"
done
