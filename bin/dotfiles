#!/bin/bash

if ! [ $# -eq 1 ]; then
  echo "How to use: dotfiles update|upgrade"
  exit 1
fi

DOTDOTFILES_PATH=$(dirname "$0")/..

command="$1"
case $command in
  update) cd $DOTDOTFILES_PATH && git pull -f origin main;;
  upgrade) cd $DOTDOTFILES_PATH && bin/mitamae local lib/recipe.rb;;
  *) echo "$command is not exist command. update|upgrade is only available."; exit 1;;
esac

